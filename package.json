{
  "name": "@kaokei/post-bridge",
  "version": "1.0.0",
  "description": "jsbridge for iframes or windows by window.postMessage",
  "main": "./dist/index.cjs.runtime.min.js",
  "module": "./dist/index.esm.runtime.min.js",
  "types": "./dist/src/index.d.ts",
  "unpkg": "dist/index.iife.min.js",
  "jsdelivr": "dist/index.iife.min.js",
  "files": [
    "dist/**/*"
  ],
  "sideEffects": false,
  "homepage": "https://github.com/kaokei/postBridge",
  "author": "kaokei",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kaokei/postBridge/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaokei/postBridge.git"
  },
  "keywords": [
    "iframe",
    "postMessage",
    "postBridge",
    "jsBridge"
  ],
  "scripts": {
    "tsc": "tsc -p tsconfig.app.json",
    "tsc:w": "tsc -p tsconfig.app.json -w",
    "rp": "rollup -c rollup.config.js",
    "rp:w": "npm run tsc:w | rollup -wc rollup.config.js",
    "unit": "jest",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --fix --ext js,ts,jsx,tsx,vue src test",
    "dev": "webpack serve --config ./example/webpack.config.js",
    "build1": "npm run tsc && npm run rp",
    "build": "npm run rp",
    "clean": "rm -rf dist/*",
    "postpublish": "git push origin --follow-tags",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "standard-version -r",
    "release:first": "standard-version --first-release"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-external-helpers": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/types": "^7.12.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-json": "^4.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "@vue/compiler-sfc": "^3.0.1",
    "@vue/test-utils": "^2.0.0-beta.14",
    "babel-jest": "^26.6.3",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^7.2.0",
    "fs-extra": "^9.0.1",
    "jest": "^26.6.3",
    "jest-environment-jsdom": "^26.6.2",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2",
    "reflect-metadata": "^0.1.13",
    "rollup": "^2.45.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-polyfill-node": "^0.6.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.2",
    "typescript": "^4.2.2",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  }
}
